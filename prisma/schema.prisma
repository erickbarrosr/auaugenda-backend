generator client {
  provider = "prisma-client-js"
  output = "./node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        Int           @id @default(autoincrement())
  name      String
  email     String        @unique
  phone     String
  pets      Pet[]
  bookings  Booking[]
}

model Pet {
  id        Int       @id @default(autoincrement())
  name      String
  species   String
  breed     String
  size      String
  age       Int
  client    Client    @relation(fields: [clientId], references: [id])
  clientId  Int
  bookings  Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  dateTime  DateTime
  service   String
  status    String
  price     Float
  pet       Pet      @relation(fields: [petId], references: [id])
  petId     Int
  client    Client   @relation(fields: [clientId], references: [id])
  clientId  Int
}

model User {
  id           Int         @id @default(autoincrement())
  name         String
  email        String      @unique
  passwordHash String
  role         Role        @default(USER)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  logs         Log[]
}

model Log {
  id          Int       @id @default(autoincrement())
  action      String
  entity      String
  entityId    Int
  details     String?
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
}

enum Role {
  ADMIN
  STAFF
  USER
}
